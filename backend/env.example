# Wellness Coach Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8081

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Replicate Configuration (for avatar generation)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Cartesia TTS Configuration
CARTESIA_API_KEY=your_cartesia_api_key_here

# AWS Configuration (for Polly TTS fallback)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Simli Configuration
SIMLI_API_KEY=your_simli_api_key
SIMLI_BASE_URL=https://api.simli.com
SIMLI_DEFAULT_AVATAR_ID=d2a5c7c6-fed9-4f55-bcb3-062f7cd20103

# Ready Player Me Configuration
RPM_KEY=your_rpm_api_key
RPM_SUBDOMAIN=your_subdomain

# A2E Configuration (optional)
A2E_API_KEY=your_a2e_api_key
A2E_BASE_URL=https://video.a2e.ai
A2E_DEFAULT_LANG=en-US

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_AVATAR_BUCKET=avatars

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Deepgram STT Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key

# Wellness Coach Specific
WELLNESS_RAG_VECTOR_STORE=pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=wellness-knowledge

# External APIs for Wellness Features
WEATHER_API_KEY=your_openweathermap_key
NUTRITION_API_KEY=your_nutrition_api_key
SKINCARE_API_KEY=your_skincare_api_key

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/wellness-coach.log

# Feature Flags
ENABLE_EMOTION_COACHING=true
ENABLE_SKIN_RECOMMENDATIONS=true
ENABLE_BIOMETRIC_ANALYSIS=true
ENABLE_ENVIRONMENTAL_DATA=true
